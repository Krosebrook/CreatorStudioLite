# ============================================
# REQUIRED: Supabase Configuration
# ============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Example:
# VITE_SUPABASE_URL=https://your-project.supabase.co
# VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=Amplify
VITE_APP_URL=http://localhost:5173
VITE_LOG_LEVEL=info
VITE_ENABLE_ANALYTICS=true

# ============================================
# OPTIONAL: Social Platform OAuth Credentials
# ============================================

# YouTube Data API
# Get from: https://console.cloud.google.com/apis/credentials
# VITE_YOUTUBE_CLIENT_ID=
# VITE_YOUTUBE_CLIENT_SECRET=

# Instagram Graph API (Business/Creator accounts only)
# Get from: https://developers.facebook.com/apps/
# VITE_INSTAGRAM_CLIENT_ID=
# VITE_INSTAGRAM_CLIENT_SECRET=

# TikTok Content Posting API
# Get from: https://developers.tiktok.com/
# VITE_TIKTOK_CLIENT_KEY=
# VITE_TIKTOK_CLIENT_SECRET=

# LinkedIn UGC API
# Get from: https://www.linkedin.com/developers/apps
# VITE_LINKEDIN_CLIENT_ID=
# VITE_LINKEDIN_CLIENT_SECRET=

# Pinterest API
# Get from: https://developers.pinterest.com/
# VITE_PINTEREST_CLIENT_ID=
# VITE_PINTEREST_CLIENT_SECRET=

# ============================================
# OPTIONAL: AI Service API Keys
# ============================================

# OpenAI (GPT models)
# Get from: https://platform.openai.com/api-keys
# VITE_OPENAI_API_KEY=

# Anthropic (Claude models)
# Get from: https://console.anthropic.com/
# VITE_ANTHROPIC_API_KEY=

# ============================================
# OPTIONAL: Payment Processing
# ============================================

# Stripe (use test keys for development)
# Get from: https://dashboard.stripe.com/apikeys
# VITE_STRIPE_PUBLIC_KEY=pk_test_...

# ============================================
# OPTIONAL: AWS S3 Storage (for heavy media)
# ============================================

# AWS S3 Configuration
# VITE_AWS_S3_BUCKET=
# VITE_AWS_REGION=us-east-1

# ============================================
# Production Environment Notes
# ============================================
# 1. Never commit actual credentials to version control
# 2. Use Blink.new environment variables UI for secrets
# 3. For production, replace all test/dev keys with production keys
# 4. Ensure proper OAuth callback URLs are configured
# 5. Enable HTTPS in production (VITE_APP_URL should use https://)
# 6. Set VITE_LOG_LEVEL=warn or VITE_LOG_LEVEL=error in production
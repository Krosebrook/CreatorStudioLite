# ==============================================
# Amplify Creator Platform - Environment Configuration
# ==============================================

# -----------------
# Required Settings
# -----------------

# Supabase Configuration (Required)
# Get these from your Supabase project settings: https://app.supabase.com
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# -----------------
# Optional Settings
# -----------------

# Stripe Payment Processing (Optional - for monetization features)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
VITE_STRIPE_SECRET_KEY=sk_test_...

# API Configuration
VITE_API_URL=http://localhost:3000

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_TEAM_COLLABORATION=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENTS=true

# Analytics (Optional)
VITE_ANALYTICS_ENABLED=false
VITE_GOOGLE_ANALYTICS_ID=

# Error Tracking (Optional)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# Social Platform API Keys (Optional - for direct API access)
# Instagram
VITE_INSTAGRAM_CLIENT_ID=
VITE_INSTAGRAM_CLIENT_SECRET=

# Facebook
VITE_FACEBOOK_APP_ID=
VITE_FACEBOOK_APP_SECRET=

# Twitter/X
VITE_TWITTER_API_KEY=
VITE_TWITTER_API_SECRET=

# LinkedIn
VITE_LINKEDIN_CLIENT_ID=
VITE_LINKEDIN_CLIENT_SECRET=

# TikTok
VITE_TIKTOK_CLIENT_KEY=
VITE_TIKTOK_CLIENT_SECRET=

# YouTube
VITE_YOUTUBE_API_KEY=
VITE_YOUTUBE_CLIENT_ID=
VITE_YOUTUBE_CLIENT_SECRET=

# Application Settings
VITE_APP_NAME=Amplify Creator Platform
VITE_APP_URL=http://localhost:5173
VITE_MAX_UPLOAD_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime

# Environment
NODE_ENV=development

# -----------------
# Production Notes
# -----------------
# For production:
# 1. Change NODE_ENV to "production"
# 2. Use production API URLs
# 3. Use live Stripe keys (pk_live_... and sk_live_...)
# 4. Enable HTTPS
# 5. Set strong, unique values for all secrets
# 6. Never commit this file with real credentials to version control
